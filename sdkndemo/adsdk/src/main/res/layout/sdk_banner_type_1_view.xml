<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="53dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/sdk_banner_1_title_tv"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:textColor="#262626"
            android:textSize="14sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="55dp"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="5dp"
          android:layout_marginRight="10dp"
          android:layout_alignParentEnd="true"
          android:gravity="center_vertical">
        <TextView
            android:id="@+id/sdk_banner_1_description_tv"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#808080"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sdk_banner_1_description_tv"
            android:id="@+id/banner_html_tag"
            android:gravity="center"
            android:text="@string/sdk_tag_ad_text"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sdk_background_circle" />
      </RelativeLayout>

        <ImageView
            android:id="@+id/banner_download_tag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sdk_banner_ad_download"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>

