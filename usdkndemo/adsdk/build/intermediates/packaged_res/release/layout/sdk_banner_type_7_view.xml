<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="53dp">

    <ImageView
        android:id="@+id/sdk_banner_7_img_tv"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/sdk_banner_7_img_tv"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/sdk_banner_7_title_tv"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#262626"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            android:ellipsize="end"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:gravity="center_vertical"
          android:layout_marginBottom="5dp"
          android:layout_marginRight="10dp">

          <TextView
              android:id="@+id/sdk_banner_7_description_tv"
              android:layout_width="236dp"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_alignRight="@+id/banner_html_tag"
              android:layout_marginRight="50dp"
              android:ellipsize="end"
              android:gravity="center_vertical"
              android:singleLine="true"
              android:textColor="#808080"
              android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@+id/sdk_banner_7_description_tv"
            android:id="@+id/banner_html_tag"
            android:gravity="center"
            android:text="@string/sdk_tag_ad_text"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            android:background="@drawable/sdk_background_circle" />
      </RelativeLayout>
        <ImageView
            android:id="@+id/banner_download_tag"
            android:layout_alignBaseline="@id/sdk_banner_7_img_tv"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sdk_banner_ad_download"
            android:layout_alignParentRight="true"
            tools:ignore="NotSibling"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


</RelativeLayout>

